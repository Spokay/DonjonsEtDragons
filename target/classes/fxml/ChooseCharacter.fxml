<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="800" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.donjonsetdragons.Controllers.MainController">
   <children>
      <FlowPane alignment="CENTER" columnHalignment="CENTER" orientation="VERTICAL" VBox.vgrow="ALWAYS">
         <children>
            <TextField minWidth="225.0" promptText="Hero Name">
               <FlowPane.margin>
                  <Insets bottom="20.0" />
               </FlowPane.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <ChoiceBox minWidth="225.0" id="heroChoiceBox" fx:id="heroChoiceBox">
               <FlowPane.margin>
                  <Insets bottom="20.0" />
               </FlowPane.margin>
            </ChoiceBox>
            <Button minWidth="225.0" mnemonicParsing="false" text="Start Game" onAction="#startGame"/>
         </children>
      </FlowPane>
   </children>
</VBox>
